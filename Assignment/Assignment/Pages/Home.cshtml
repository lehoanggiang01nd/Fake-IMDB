@page
@model Assignment.Pages.HomeModel
@{
}


<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="https://sandmafia.files.wordpress.com/2015/07/imdb.jpg" class="d-block w-100" height="500" alt="...">
        </div>
        @foreach (var item in Model.Movies)
        {
            <div class="carousel-item">
                <img style="object-fit:fill" src="@item.Image" class="d-block w-100" height="500" alt="...">
            </div>
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<hr/>

<div class="container search">
    <div class="row">
        <form class="col-md-12 d-flex">
            <input class="form-control me-2" type="text" placeholder="Search" aria-label="Search" asp-for="SearchTXT">
            <button class="btn btn-outline-primary" type="submit">Search</button>
        </form>               
    </div>
</div>

<p class="h2 text-center mt-2">Movies</p>
<div class="row flex-column-reverse flex-md-row">
    @foreach (var item in Model.Movies)
    {
        <div class="col-md-3 mb-2">
            <div class="card h-100">
                <div class="card-header">
                    <img class="" src="@item.Image" style="object-fit:contain;width:100%;height:25rem" alt="Card image">
                </div>
                <div class="card-body d-flex flex-column">
                    <div class="mt-auto">
                        <h1 class="card-title h2"><a class="nav-link" asp-page="/MovieDetail" asp-route-mid="@item.MovieId">@item.Title</a></h1>
                        <div class="container">
                            <div class="row">
                                <div class="col-6 metadata">
                                    <span class="badge text-bg-secondary">@item.Year</span>
                                </div>
                                <div class="col-6 metadata">
                                    <span class="badge text-bg-primary">@item.Gernes.Descripsion</span>
                                </div>
                            </div>
                        </div>
                        <p class="card-text text-muted">A team of explorers travel through wormhole in space in an attempt to ensure humanity's survival.</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>