@page
@model Assignment.Pages.UserProfileModel
@{
}


<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-3 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" width="150px" src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg"><span class="font-weight-bold"><strong>@Model.person.Fullname</strong></span><span class="text-black-50">@Model.person.Email</span><span> </span></div>
        </div>
        <div class="col-md-5 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Profile Settings</h4>
                </div>
                <div class="row mt-3">
                    <form method="post">
                        <div class="col-md-12"><label class="labels" asp-for="@Model.person.Fullname">Fullname</label><input type="text" class="form-control" asp-for="@Model.person.Fullname" required></div>
                        <div class="col-md-12">
                            <label class="labels" asp-for="@Model.person.Gender">Gender</label>
                            <select class="form-select" asp-for="@Model.person.Gender" required>
                                <option value=""></option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                            </select>
                        </div>
                        <div class="mt-5 text-center">
                            <button class="btn btn-primary profile-button" type="submit">Save Profile</button>
                            <a class="btn btn-primary" asp-page="/ChangePassword" role="button">Change Password</a>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>